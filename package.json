  "dependencies": {
    "@azure/identity": "4.4.1",
    "@azure/storage-blob": "12.29.1",
    "@hapi/boom": "10.0.0",
    "@hapi/hapi": "20.2.2",
    "applicationinsights": "2.9.6",
    "ffc-database": "1.0.1",
    "ffc-messaging": "2.10.1",
    "hapi-pino": "13.0.0",
    "joi": "17.7.1",
